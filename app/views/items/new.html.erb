<div class="page-header">
  <h1>New Item</h1>
</div>

<%= form_tag(items_url, method: 'post', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :weekday, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :weekday, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :item_name, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :item_name, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :item_picture, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :item_picture, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :item_category, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :item_category, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :item_price, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :item_price, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <%= label_tag :float, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :float, nil, class: 'form-control' %>
    </div>
  </div>

    <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
      <%= submit_tag "Create Item", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
