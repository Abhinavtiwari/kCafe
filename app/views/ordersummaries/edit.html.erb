<div class="page-header">
  <h1>Editing Ordersummary #<%= @ordersummary.id %></h1>
</div>

<%= form_tag(ordersummary_url(@ordersummary), method: 'patch', class: 'form-horizontal') do %>

  <div class="form-group">
    <%= label_tag :order_date, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= date_select_tag :order_date, @ordersummary.order_date, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :total_bill, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :total_bill, @ordersummary.total_bill, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :student_id, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-2">
      <%= number_field_tag :student_id, @ordersummary.student_id, class: 'form-control'%>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag :order_status, nil, class: 'col-md-2 control-label' %>
    
    <div class="col-md-6">
      <%= text_field_tag :order_status, @ordersummary.order_status, class: 'form-control'%>
    </div>
  </div>

  
    <div class="form-group">
    <div class="col-md-offset-2 col-md-6">
          <%= submit_tag "Update Ordersummary", class: 'btn btn-primary' %>
    </div>
  </div>

<% end %>
